# Blog Editor API Environment Variables

# GitHub OAuth App credentials
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/callback

# GitHub Repository to manage
GITHUB_REPO_OWNER=your_username
GITHUB_REPO_NAME=your_blog_repo
GITHUB_BRANCH=main

# Blog content path in repository
BLOG_CONTENT_PATH=src/content/blog

# Application settings
SECRET_KEY=change-me-in-production-use-a-secure-random-string
FRONTEND_URL=http://localhost:3000
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# CORS allowed origins (comma-separated for multiple)
ALLOWED_ORIGINS=["http://localhost:3000"]
